<Window x:Class="HW6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="321" Margin="0,0,0,-0.2" VerticalAlignment="Top" Width="518" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">
            <Button x:Name="GuessButton" Content="Guess" HorizontalAlignment="Left" Margin="195,217,0,0" VerticalAlignment="Top" Width="106" Height="50" FontSize="20" FontWeight="Bold" Click="GuessButton_Click"/>
            <TextBox x:Name="NumberInput" HorizontalAlignment="Left" Height="43" Margin="195,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"  FontSize="24" Background="White"/>
            <Label Content="Guess a number from 1 to 10" HorizontalAlignment="Left" Margin="62,29,0,0" VerticalAlignment="Top" Width="388" Height="43" FontSize="22" FontWeight="Bold" FontStyle="Italic"/>
        </Grid>

    </Grid>
</Window>
